int strlen(char *str);
int strcmp(char *s, char *t);
void strcpy(char *s, char *t);
void touppercase(char *str);
void tolowercase(char *str);



int strlen(char *str){
	int len = -1;
	while(str[1+len++]!=0);
	return len;
}

int strcmp(char *s, char *t)
{
	while(*s==*t) {
		if(*s=='\0') return 0;
		s++; t++;
	}
	return *s-*t;
}

void strcpy(char *s, char *t)
{
	while(*s++=*t++);
}

void touppercase(char *str){
	int i = 0;
	int diff = 'a'-'A';
	while(str[i]!=0){
		char cur = str[i];
		if(cur>='a'&&cur<='z'){
			cur-=diff;
			str[i]=cur;
		}
		i++;
	}
}

void tolowercase(char *str){
	int i = 0;
	int diff = 'A'-'a';
	while(str[i]!=0){
		char cur = str[i];
		if(cur>='A'&&cur<='Z'){
			cur-=diff;
			str[i]=cur;
		}
		i++;
	}
}
